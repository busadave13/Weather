{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "HealthChecks": {
    "RequestCountThreshold": 5,
    "LiveGracePeriodRequests": 3
  },
  "LoadShedding": {
    "Enabled": true,
    "RpsThreshold": 100,
    "FailurePercentage": 3,
    "FailureStatusCode": 503,
    "WindowDurationSeconds": 1
  },
  "Mockery": {
    "Enabled": true,
    "BaseUrl": "http://localhost:5500"
  },
  "SensorServices": {
    "Temperature": {
      "BaseUrl": "http://localhost:5001"
    },
    "Wind": {
      "BaseUrl": "http://localhost:5002"
    },
    "Precipitation": {
      "BaseUrl": "http://localhost:5003"
    }
  }
}
